# backend/.env.example

# ========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ========================================
DATABASE_URL="postgresql://user:password@localhost:5432/febic"

# ========================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO
# ========================================
JWT_SECRET="your-super-secret-jwt-key-here-change-in-production"
JWT_EXPIRES_IN="7d"

# ========================================
# CONFIGURAÇÕES DO SERVIDOR
# ========================================
PORT=3001
NODE_ENV="development"

# ========================================
# CONFIGURAÇÕES DE CORS
# ========================================
CORS_ORIGIN="http://localhost:5173"

# ========================================
# CONFIGURAÇÕES DE UPLOAD
# ========================================
# Tamanho máximo do arquivo em bytes (20MB = 20 * 1024 * 1024)
MAX_FILE_SIZE=20971520

# Pasta onde os uploads serão salvos (relativo ao projeto)
UPLOAD_PATH="./uploads"

# Tipos de arquivo permitidos (separados por vírgula)
ALLOWED_FILE_TYPES="pdf,doc,docx,jpg,jpeg,png,gif,xls,xlsx,txt"

# Número máximo de arquivos por upload
MAX_FILES_PER_UPLOAD=5

# Número máximo de documentos por projeto
MAX_DOCUMENTS_PER_PROJECT=20

# ========================================
# CONFIGURAÇÕES DE PAGAMENTO (ASAAS)
# ========================================
# Sandbox: https://sandbox.asaas.com/api/v3
# Produção: https://api.asaas.com/v3
ASAAS_API_URL="https://sandbox.asaas.com/api/v3"
ASAAS_API_KEY="your-asaas-api-key-here"

# ========================================
# CONFIGURAÇÕES DE EMAIL
# ========================================
# Configurações do SMTP
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Email remetente padrão
FROM_EMAIL="noreply@febic.com"
FROM_NAME="FEBIC - Sistema de Feiras"

# ========================================
# CONFIGURAÇÕES DE LOGS
# ========================================
# Nível de log: error, warn, info, debug
LOG_LEVEL="info"

# Salvar logs em arquivo (true/false)
LOG_TO_FILE=true

# ========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ========================================
# Rate limiting - requests por minuto
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Rate limiting - uploads por hora
UPLOAD_RATE_LIMIT_PER_HOUR=50

# ========================================
# CONFIGURAÇÕES DE CACHE
# ========================================
# Redis (opcional, para cache e sessões)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# ========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ========================================
# Sentry (opcional, para monitoramento de erros)
SENTRY_DSN=""

# ========================================
# CONFIGURAÇÕES ESPECÍFICAS DO FEBIC
# ========================================
# URL base do frontend
FRONTEND_URL="http://localhost:5173"

# URL base da API
API_URL="http://localhost:3001/api"

# Configurações de feiras
DEFAULT_FEIRA_NAME="FEBIC 2025"
FEIRA_START_DATE="2025-08-01"
FEIRA_END_DATE="2025-08-31"

# Configurações de projetos
PROJECT_SUBMISSION_DEADLINE="2025-07-15"
PROJECT_EVALUATION_DEADLINE="2025-07-30"

# ========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ========================================
# Mostrar erros detalhados (apenas development)
SHOW_DETAILED_ERRORS=true

# Executar seeds automaticamente
AUTO_RUN_SEEDS=false

# Regenerar banco a cada inicialização (CUIDADO!)
RESET_DATABASE_ON_START=false